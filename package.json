{
  "name": "wiener-linien",
  "description": "Typescript wrapper for Wiener Linien Realtime Data API",
  "version": "0.1.0",
  "main": "index.js",
  "author": "stylesuxx",
  "license": "MIT",
  "scripts": {
    "publish": "",
    "bundle": "esbuild src/index.ts --outdir=bundle --sourcemap --bundle --platform=node --target=node20.09.0",
    "clean": "rimraf dist",
    "compile": "tsc",
    "compile-watch": "tsc -w",
    "dev": "nodemon --watch src --watch test --ext ts,json --exec 'yarn bundle && yarn start'",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint . --fix",
    "lint-check": "eslint .",
    "test": "jest"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
